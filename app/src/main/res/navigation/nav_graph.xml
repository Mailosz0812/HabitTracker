<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/habitListFragment">

    <fragment
        android:id="@+id/habitListFragment"
        android:name="com.example.habittracker.Habit.HabitListFragment"
        android:label="Habits"
        tools:layout="@layout/fragment_habit_list" />

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.habittracker.Stats.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_statistics">

        <action
            android:id="@+id/action_statistics_to_detail"
            app:destination="@id/habitDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/habitDetailFragment"
        android:name="com.example.habittracker.Stats.HabitDetailFragment"
        android:label="Habit Details"
        tools:layout="@layout/fragment_habit_detail">

        <argument
            android:name="habitId"
            app:argType="string" />
    </fragment>

</navigation>