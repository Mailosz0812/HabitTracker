<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/stat_habit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="Bieganie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/stat_streak_container"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:id="@+id/stat_streak_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/stat_streak_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STREAK"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#FF9800"/>

            <TextView
                android:id="@+id/stat_streak_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12 dni"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FF9800"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/progress_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/stat_habit_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/stat_percent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="75%"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>

            <ProgressBar
                android:id="@+id/stat_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="12dp"
                android:layout_marginStart="16dp"
                android:progressDrawable="@drawable/custom_progress_bg"
                tools:progress="75"/>
        </LinearLayout>

        <TextView
            android:id="@+id/stat_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Regularność: 22 / 30 dni"
            android:textSize="12sp"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_container"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>